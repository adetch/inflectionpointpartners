---
import Layout from '../layouts/Layout.astro';
import EventHorizon from '../components/EventHorizon.astro';
---

<Layout title="Inflection Point Partners - Bespoke Interior Design">
	<!-- Hero Section -->
	<div class="mx-auto max-w-7xl px-6 lg:px-8">
		<div class="mx-auto max-w-2xl lg:max-w-none">
			<div class="mt-24 sm:mt-32 md:mt-56">
				<div class="max-w-3xl">
					<h1 class="font-display text-5xl font-medium tracking-tight text-stone-800 sm:text-7xl">
						Thoughtful spaces designed for the way you live.
					</h1>
					<p class="mt-6 text-xl text-neutral-600">
												We create interiors that balance beauty and function, transforming houses into homes that tell your story.

					</p>
				</div>
			</div>
		</div>
	</div>

	<!-- Portfolio Gallery Section -->
	<div class="mt-24 sm:mt-32 lg:mt-40">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto max-w-2xl lg:max-w-none">
				<div class="max-w-2xl">
					<h2 class="font-display text-3xl font-medium tracking-tight text-stone-800">
						Recent Projects
					</h2>
					<p class="mt-4 text-base text-neutral-600">
						A selection of spaces we've had the pleasure of transforming.
					</p>
				</div>
				<div class="mt-10 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
					<div class="group relative overflow-hidden rounded-2xl">
						<img
							src="/images/projects/chelsea-townhouse.jpg"
							alt="Modern living room with natural light"
							class="aspect-[3/2] w-full object-cover transition duration-300 group-hover:scale-105"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-neutral-950/60 to-transparent opacity-0 transition duration-300 group-hover:opacity-100"></div>
						<div class="absolute bottom-4 left-4 right-4 opacity-0 transition duration-300 group-hover:opacity-100">
							<p class="text-sm font-medium text-white">Chelsea Townhouse</p>
							<p class="text-xs text-neutral-300">Residential</p>
						</div>
					</div>
					<div class="group relative overflow-hidden rounded-2xl">
						<img
							src="/images/projects/tribeca-loft.jpg"
							alt="Minimalist bedroom design"
							class="aspect-[3/2] w-full object-cover transition duration-300 group-hover:scale-105"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-neutral-950/60 to-transparent opacity-0 transition duration-300 group-hover:opacity-100"></div>
						<div class="absolute bottom-4 left-4 right-4 opacity-0 transition duration-300 group-hover:opacity-100">
							<p class="text-sm font-medium text-white">Tribeca Loft</p>
							<p class="text-xs text-neutral-300">Residential</p>
						</div>
					</div>
					<div class="group relative overflow-hidden rounded-2xl">
						<img
							src="/images/projects/pacific-heights-kitchen.jpg"
							alt="Open plan kitchen and dining"
							class="aspect-[3/2] w-full object-cover transition duration-300 group-hover:scale-105"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-neutral-950/60 to-transparent opacity-0 transition duration-300 group-hover:opacity-100"></div>
						<div class="absolute bottom-4 left-4 right-4 opacity-0 transition duration-300 group-hover:opacity-100">
							<p class="text-sm font-medium text-white">Pacific Heights Kitchen</p>
							<p class="text-xs text-neutral-300">Residential</p>
						</div>
					</div>
					<div class="group relative overflow-hidden rounded-2xl">
						<img
							src="/images/projects/hampstead-study.jpg"
							alt="Elegant home office space"
							class="aspect-[3/2] w-full object-cover transition duration-300 group-hover:scale-105"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-neutral-950/60 to-transparent opacity-0 transition duration-300 group-hover:opacity-100"></div>
						<div class="absolute bottom-4 left-4 right-4 opacity-0 transition duration-300 group-hover:opacity-100">
							<p class="text-sm font-medium text-white">Hampstead Study</p>
							<p class="text-xs text-neutral-300">Residential</p>
						</div>
					</div>
					<div class="group relative overflow-hidden rounded-2xl">
						<img
							src="/images/projects/mayfair-residence.jpg"
							alt="Luxury bathroom design"
							class="aspect-[3/2] w-full object-cover transition duration-300 group-hover:scale-105"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-neutral-950/60 to-transparent opacity-0 transition duration-300 group-hover:opacity-100"></div>
						<div class="absolute bottom-4 left-4 right-4 opacity-0 transition duration-300 group-hover:opacity-100">
							<p class="text-sm font-medium text-white">Mayfair Residence</p>
							<p class="text-xs text-neutral-300">Residential</p>
						</div>
					</div>
					<div class="group relative overflow-hidden rounded-2xl">
						<img
							src="/images/projects/fintech-hq.jpg"
							alt="Contemporary office space"
							class="aspect-[3/2] w-full object-cover transition duration-300 group-hover:scale-105"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-neutral-950/60 to-transparent opacity-0 transition duration-300 group-hover:opacity-100"></div>
						<div class="absolute bottom-4 left-4 right-4 opacity-0 transition duration-300 group-hover:opacity-100">
							<p class="text-sm font-medium text-white">Fintech HQ</p>
							<p class="text-xs text-neutral-300">Commercial</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Event Horizon Visual Section -->
	<div class="mt-24 sm:mt-32 lg:mt-40">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto max-w-2xl lg:max-w-none">
				<div class="rounded-4xl bg-stone-50 py-24 sm:py-32 relative overflow-hidden">
					<!-- Event Horizon Background -->
					<div class="absolute inset-0 opacity-60">
						<EventHorizon />
					</div>

					<!-- Content -->
					<div class="relative z-10 text-center px-6">
						<h2 class="font-display text-sm font-semibold tracking-wider text-stone-800">
							Our Design Philosophy
						</h2>
						<p class="mt-6 max-w-3xl mx-auto text-lg text-neutral-700">
							Every space has potential waiting to be revealed. We believe great design emerges from understanding how you live, what inspires you, and creating environments that elevate your daily experience.
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Mission Section -->
	<div class="mt-24 sm:mt-32 lg:mt-40">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto max-w-2xl lg:max-w-none">
				<div class="max-w-2xl">
					<h2 class="font-display text-3xl font-medium tracking-tight text-stone-800">
						Our Approach
					</h2>
					<div class="mt-6 space-y-6 text-base text-neutral-600">
						<p>
							At Inflection Point Partners, we believe that exceptional interior design begins with listening. Every project starts with understanding your lifestyle, aspirations, and the unique character you want your space to embody.
						</p>
						<p>
							From residential transformations to commercial spaces, we blend timeless elegance with contemporary sensibility, sourcing the finest materials and collaborating with skilled artisans to bring your vision to life.
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Testimonial Section -->
	<div class="mt-24 sm:mt-32 lg:mt-40">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto max-w-2xl lg:max-w-none">
				<div class="rounded-3xl bg-neutral-50 p-8 sm:p-12 ring-1 ring-stone-300 relative overflow-hidden">
					<!-- Testimonials Container -->
					<div id="testimonials-container" class="relative min-h-[200px]">
						<!-- Testimonial 1 -->
						<div class="testimonial-slide opacity-100 absolute inset-0 transition-opacity duration-500" data-slide="0">
							<blockquote class="text-stone-800">
								<p class="text-xl font-medium tracking-tight sm:text-2xl">
									"Inflection Point Partners transformed our dated Victorian into a space that honors its heritage while feeling completely modern. Every detail was considered, and the result exceeded our dreams."
								</p>
								<footer class="mt-6">
									<p class="text-base font-semibold text-stone-800">
										— Sarah Mitchell
									</p>
								</footer>
							</blockquote>
						</div>

						<!-- Testimonial 2 -->
						<div class="testimonial-slide opacity-0 absolute inset-0 transition-opacity duration-500" data-slide="1">
							<blockquote class="text-stone-800">
								<p class="text-xl font-medium tracking-tight sm:text-2xl">
									"Working with their team was a revelation. They understood our family's needs immediately and created a home that's both beautiful and genuinely livable. It feels like us, only better."
								</p>
								<footer class="mt-6">
									<p class="text-base font-semibold text-stone-800">
										— James & Emma Chen
									</p>
								</footer>
							</blockquote>
						</div>

						<!-- Testimonial 3 -->
						<div class="testimonial-slide opacity-0 absolute inset-0 transition-opacity duration-500" data-slide="2">
							<blockquote class="text-stone-800">
								<p class="text-xl font-medium tracking-tight sm:text-2xl">
									"The attention to light, texture, and proportion in our apartment renovation was extraordinary. Friends constantly ask who designed it. We couldn't be happier."
								</p>
								<footer class="mt-6">
									<p class="text-base font-semibold text-stone-800">
										— Michael Rodriguez
									</p>
								</footer>
							</blockquote>
						</div>
					</div>

					<!-- Dots Navigation -->
					<div class="flex justify-center gap-2 mt-8">
						<button
							type="button"
							class="testimonial-dot w-2.5 h-2.5 rounded-full bg-stone-700 transition-opacity"
							data-index="0"
							aria-label="Go to testimonial 1"
						></button>
						<button
							type="button"
							class="testimonial-dot w-2.5 h-2.5 rounded-full bg-stone-700 opacity-30 transition-opacity"
							data-index="1"
							aria-label="Go to testimonial 2"
						></button>
						<button
							type="button"
							class="testimonial-dot w-2.5 h-2.5 rounded-full bg-stone-700 opacity-30 transition-opacity"
							data-index="2"
							aria-label="Go to testimonial 3"
						></button>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Team Section -->
	<div class="mt-24 sm:mt-32 lg:mt-40">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto max-w-2xl lg:max-w-none">
				<div class="max-w-2xl">
					<h2 class="font-display text-3xl font-medium tracking-tight text-stone-800">
						Meet the Team
					</h2>
				</div>
				<div class="mt-16 grid grid-cols-1 gap-8 sm:grid-cols-2">
					<a href="/about#arthur" class="relative flex w-full flex-col rounded-3xl p-6 ring-1 ring-stone-300 transition hover:bg-neutral-50 sm:p-8 no-underline">
						<h3 class="font-display text-2xl font-semibold text-stone-800">
							Arthur Campos
						</h3>
						<p class="mt-4 text-base text-neutral-600">
							Arthur is the founder and creative director, with over two decades of experience shaping spaces that transform the way people live and work.
						</p>
					</a>

					<a href="/about#claire" class="relative flex w-full flex-col rounded-3xl p-6 ring-1 ring-stone-300 transition hover:bg-neutral-50 sm:p-8 no-underline">
						<h3 class="font-display text-2xl font-semibold text-stone-800">
							Claire Ashcraft
						</h3>
						<p class="mt-4 text-base text-neutral-600">
							Claire is the principal designer, bringing over 15 years of experience crafting residential and hospitality spaces across Europe and North America.
						</p>
					</a>

					<a href="/about#marcus" class="relative flex w-full flex-col rounded-3xl p-6 ring-1 ring-stone-300 transition hover:bg-neutral-50 sm:p-8 no-underline">
						<h3 class="font-display text-2xl font-semibold text-stone-800">
							Marcus Whitener
						</h3>
						<p class="mt-4 text-base text-neutral-600">
							Marcus leads our architectural integration team, ensuring every design harmonizes with its structural context and maximizes spatial potential.
						</p>
					</a>

					<a href="/about#sofia" class="relative flex w-full flex-col rounded-3xl p-6 ring-1 ring-stone-300 transition hover:bg-neutral-50 sm:p-8 no-underline">
						<h3 class="font-display text-2xl font-semibold text-stone-800">
							Sofia Karter
						</h3>
						<p class="mt-4 text-base text-neutral-600">
							Sofia brings Scandinavian minimalism and warmth to our residential projects, creating calm, light-filled spaces that feel both serene and inviting.
						</p>
					</a>
				</div>
			</div>
		</div>
	</div>
</Layout>

<script>
	// Testimonial carousel functionality
	document.addEventListener('DOMContentLoaded', () => {
		const slides = document.querySelectorAll('.testimonial-slide');
		const dots = document.querySelectorAll('.testimonial-dot');
		let currentSlide = 0;

		// Show first slide on load
		if (slides.length > 0) {
			slides[0].classList.remove('opacity-0');
			slides[0].classList.add('opacity-100');
		}

		function showSlide(index) {
			// Hide all slides
			slides.forEach((slide) => {
				slide.classList.remove('opacity-100');
				slide.classList.add('opacity-0');
			});

			// Show selected slide
			if (slides[index]) {
				slides[index].classList.remove('opacity-0');
				slides[index].classList.add('opacity-100');
			}

			// Update dots
			dots.forEach((dot, i) => {
				if (i === index) {
					dot.classList.remove('opacity-30');
					dot.classList.add('opacity-100');
				} else {
					dot.classList.remove('opacity-100');
					dot.classList.add('opacity-30');
				}
			});

			currentSlide = index;
		}

		// Add click handlers to dots
		dots.forEach((dot, index) => {
			dot.addEventListener('click', () => {
				showSlide(index);
			});
		});
	});
</script>

<style>
	/* Keep event horizon styles scoped */
	.rounded-4xl {
		border-radius: 2.5rem;
	}

	@keyframes fade-in {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-fade-in {
		animation: fade-in 0.6s ease-out forwards;
	}
</style>
